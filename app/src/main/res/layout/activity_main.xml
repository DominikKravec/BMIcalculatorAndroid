<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="36sp"
    />

    <EditText
        android:id="@+id/fname_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="@string/fname_et"
    />

    <EditText
        android:id="@+id/lname_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="@string/lname_et"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    >
        <EditText
            android:id="@+id/weight_input"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="@string/weight_et"
            android:text="0"
            android:inputType="numberDecimal"
            android:textSize="24sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textSize="24sp"
        />
    </LinearLayout>

    <SeekBar
        android:id="@+id/weight_input_slider"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/height_input"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="@string/weight_et"
            android:text="0"
            android:inputType="numberDecimal"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:textSize="24sp"
            />
    </LinearLayout>

    <SeekBar
        android:id="@+id/height_input_slider"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        />

    <!--
    <TextView
        android:id="@+id/weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
    />
    -->

    <EditText
        android:id="@+id/age_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="@string/age_et"
        android:inputType="number"
        android:textSize="24sp"
    />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/male_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/male_tv"/>

        <RadioButton
            android:id="@+id/female_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/female_tv"/>

    </RadioGroup>

    <Button
        android:id="@+id/calculate_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_bt"
        android:textSize="30sp"
    />

</LinearLayout>